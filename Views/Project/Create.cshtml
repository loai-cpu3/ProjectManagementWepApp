@using WebApplication1.Models.ViewModels
@model ProjectViewModel

@{
    ViewData["Title"] = "Project";
    Layout = "_Layout";
}

<div class="content">
    
    <form asp-action="CreateNewProject" asp-controller="Project" method="post" class="create-project-form">
        <div class="form-group">
            <label asp-for ="ProjectName">Project Name:</label>
            <input asp-for="ProjectName" id="project-name">
        </div>
        <div class="form-group">
            <label asp-for="ProjectDescription">Project Description:</label>
            <textarea asp-for="ProjectDescription" id="project-description" ></textarea>
        </div>
        <div class="form-group">
            <label asp-for="StartDate">Start Date:</label>
            <input asp-for ="StartDate" id="start-date" >
        </div>
        <div class="form-group">
            <label asp-for="EndDate">Due Date:</label>
            <input asp-for ="EndDate" id="due-date">
        </div>
        <div class="form-group">
            <button type="submit">Create Project</button>
        </div>

         <div asp-validation-summary="All" style="color :red;font-weight:700;margin-left:20;     " ></div>
    </form>
</div>