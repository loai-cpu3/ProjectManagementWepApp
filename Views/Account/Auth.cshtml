@model AuthViewModel

@{
Layout = null;

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/AuthPage/style.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
          rel="stylesheet" />
    <title>Sign in / Sign up Form</title>
</head>
<body>
    <div class="container">
        <div class="forms-container">
            <div class="signin-signup">
                <form asp-action="LogIn" asp-controller="Account" method="post" class="sign-in-form" id="Signin">
                    <div>
                        <span asp-validation-for="LoginModel.username" style="color:red"></span> <br />
                        <span asp-validation-for="LoginModel.password" style="color:red"></span> <br />
                        </div>
                    
                    <h2 class="title">Sign in</h2>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input asp-for ="LoginModel.username"  placeholder="Username" />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input asp-for ="LoginModel.password" placeholder="Password" />
                       
                    </div>
                    <input type="submit" value="Login" class="btn solid" />
                    <p class="social-text">Or Sign in with social platforms</p>
                    <div class="social-media">
                        <a href="#" class="social-icon">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-google"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                       
                    </div>
                </form>
                <form asp-action="SignUp" asp-controller="Account"  method ="post"class="sign-up-form" id="Signup">
                    <div asp-validation-summary="All" class="text-danger" style="color:red"></div>

                    
                    <div>
                        <span asp-validation-for="SignUpModel.UserName" style="color:red"></span> <br />
                        <span asp-validation-for="SignUpModel.Email" style="color:red"></span> <br />
                        <span asp-validation-for="SignUpModel.Password" style="color:red"></span> <br />
                    </div>
                    <h2 class="title">Sign up</h2>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input asp-for ="SignUpModel.UserName" type="text" placeholder="Username" />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-envelope"></i>
                        <input asp-for="SignUpModel.Email" placeholder="Email" />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input asp-for ="SignUpModel.Password" placeholder="Password" />
                    </div>
                    <input type="submit" class="btn" value="Sign up" />
                    <p class="social-text">Or Sign up with social platforms</p>
                    <div class="social-media">
                        <a href="#" class="social-icon">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-google"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3>New here ?</h3>
                    <p>WELCOME TO MY PROJECT MANGER</p>
                    <button class="btn transparent" id="sign-up-btn">Sign up</button>
                </div>
                <img src="~/AuthPage/login.svg" class="image" alt="" />
            </div>
            <div class="panel right-panel">
                <div class="content">
                    <h3>One of us ?</h3>
                    <p>WELCOME AGAIN WE APPRECIATED THAT YOU ARE ONE OF US</p>
                    <button class="btn transparent" id="sign-in-btn">Sign in</button>
                </div>
                <img src="~/AuthPage/reg.svg" class="image" alt="" />
            </div>
        </div>
    </div>

    <script src="~/AuthPage/main.js"></script>
</body>
</html>
