<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Project Manager</title>
    <link rel="stylesheet" href="~/assets/css/style.css" />
</head>
<body>
    <div class="container">
        <div class="navigation">
            <ul>
                <li>
                    <a href="#">
                        <span class="icon">
                            <ion-icon name="briefcase-outline"></ion-icon>
                        </span>
                        <span class="title">Project Manager</span>
                    </a>
                </li>

                <li class="@(ViewData["Title"]?.ToString() == "Dashboard" ? "selected" : "")">
                    <a asp-controller="Home" asp-action="Index">
                        <span class="icon">
                            <ion-icon name="home-outline"></ion-icon>
                        </span>
                        <span class="title">Dashboard</span>
                    </a>
                </li>

           

                <li class="@(ViewData["Title"]?.ToString() == "Project" ? "selected" : "")">
                    <a asp-controller="Project" asp-action="Index">
                        <span class="icon">
                            <ion-icon name="folder-outline"></ion-icon>
                        </span>
                        <span class="title">Projects</span>
                    </a>
                </li>

                <li class="@(ViewData["Title"]?.ToString() == "Profile" ? "selected" : "")">
                    <a asp-controller="Account" asp-action="Profile">
                        <span class="icon">
                            <ion-icon name="person-outline"></ion-icon>
                        </span>
                        <span class="title">Profile</span>
                    </a>
                </li>

                <li class="@(ViewData["Title"]?.ToString() == "Sign Out" ? "selected" : "")">
                    <a asp-area="Identity" asp-action="Logout" asp-controller="Account">
                        <span class="icon">
                            <ion-icon name="log-out-outline"></ion-icon>
                        </span>
                        <span class="title">Sign Out</span>
                    </a>
                </li>
            </ul>
        </div>

        <div class="main">
            <div class="topbar">
                <div class="toggle">
                    <ion-icon name="menu-outline"></ion-icon>
                </div>

                <div class="search">
                    <label>
                        <input type="text" placeholder="Search here">
                        <ion-icon name="search-outline"></ion-icon>
                    </label>
                </div>

                <div class="user">
                    @* Add user profile section here *@
                </div>
            </div>

            <!-- Main Content Section -->
            <div class="main-content">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="/assets/js/main.js"></script>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>